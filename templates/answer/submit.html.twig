{% extends 'base.html.twig' %}

{% block title %}Write your answer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="bg-light mt-4 p-4">
                <h1>Write your answer:</h1>

                <div>
                    <h2>Question</h2>
                    {{ question.question }}
                </div>
                <hr>

                {{ form_start(answerForm) }}
                    {{ form_row(answerForm.content) }}

                    <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(answerForm) }}
            </div>
        </div>
    </div>
{% endblock %}
